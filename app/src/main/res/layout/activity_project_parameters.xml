<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectParameters">

    <TextView
        android:id="@+id/TextViewdifficulty_project"
        android:layout_width="210dp"
        android:layout_height="65dp"
        android:ems="10"
        android:onClick="collectDif"
        android:text="@string/textDifficulty"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/difficultyButton3_project"
        app:layout_constraintEnd_toEndOf="@+id/difficultyButton2_project"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/difficultyButton2_project"
        app:layout_constraintTop_toBottomOf="@+id/difficultyStr"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/doneButton_project"
        android:layout_width="108dp"
        android:layout_height="74dp"
        android:onClick="todaysSessionsNav"
        android:text="@string/doneButton_repeated"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/difficultyButton2_project"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/hoursStr2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="@string/hoursStr"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/editTextEstTime_onetime"
        app:layout_constraintTop_toBottomOf="@+id/editTextDueDate_project" />

    <Button
        android:id="@+id/difficultyButton3_project"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="1dp"
        android:onClick="onCLickHard"
        android:text="@string/highDifficultyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/difficultyButton2_project"
        app:layout_constraintTop_toBottomOf="@+id/TextViewdifficulty_project"
        app:toggleCheckedStateOnClick="true" />

    <Button
        android:id="@+id/difficultyButton2_project"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="1dp"
        android:onClick="onClickMedium"
        android:text="@string/midDifficultyButton"
        app:layout_constraintEnd_toStartOf="@+id/difficultyButton3_project"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/difficultyButton1_project"
        app:layout_constraintTop_toBottomOf="@+id/TextViewdifficulty_project"
        app:toggleCheckedStateOnClick="true" />

    <Button
        android:id="@+id/difficultyButton1_project"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="1dp"
        android:onClick="onClickEasy"
        android:text="@string/lowDifficultyButton"
        app:layout_constraintEnd_toStartOf="@+id/difficultyButton2_project"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewdifficulty_project"
        app:toggleCheckedStateOnClick="true" />

    <TextView
        android:id="@+id/difficultyStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/difficultyStr"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/difficultyButton2_project"
        app:layout_constraintEnd_toEndOf="@+id/TextViewdifficulty_project"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/TextViewdifficulty_project"
        app:layout_constraintTop_toBottomOf="@+id/editTextEstTime_onetime" />

    <EditText
        android:id="@+id/editTextEstTime_onetime"
        android:layout_width="206dp"
        android:layout_height="53dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/EstTimeHint"
        android:inputType="numberDecimal"
        android:onClick="collectTime"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/difficultyStr"
        app:layout_constraintStart_toStartOf="@+id/editTextDueDate_project"
        app:layout_constraintTop_toBottomOf="@+id/editTextDueDate_project" />

    <TextView
        android:id="@+id/estTimeStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/estTimeStr"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextEstTime_onetime"
        app:layout_constraintStart_toStartOf="@+id/dueDateStr" />

    <TextView
        android:id="@+id/dueDateStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="29dp"
        android:text="@string/dueDateStr"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/editTextDueDate_project"
        app:layout_constraintStart_toStartOf="@+id/addTaskNameStr"
        app:layout_constraintTop_toBottomOf="@+id/addTaskNameStr" />

    <EditText
        android:id="@+id/editTextDueDate_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/editTextDueDate"
        android:inputType="date|datetime"
        android:minHeight="48dp"
        android:onClick="collectDueDate"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextEstTime_onetime"
        app:layout_constraintStart_toStartOf="@+id/editTextTaskName_project"
        app:layout_constraintTop_toBottomOf="@+id/editTextTaskName_project" />

    <TextView
        android:id="@+id/addTaskNameStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="91dp"

        android:layout_marginEnd="56dp"
        android:layout_marginBottom="84dp"
        android:text="@string/taskNameLabel"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/dueDateStr"
        app:layout_constraintEnd_toStartOf="@+id/editTextTaskName_project"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTaskName_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/taskNameHint"
        android:inputType="textPersonName"
        android:onClick="collectTaskName"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextDueDate_project"
        app:layout_constraintStart_toEndOf="@+id/addTaskNameStr"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>