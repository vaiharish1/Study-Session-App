<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RepeatedParameters">

    <FrameLayout
        android:id="@+id/navigationLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/navigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </FrameLayout>

    <TextView
        android:id="@+id/hoursStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minutesStr"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextEstTime_repeated"
        app:layout_constraintStart_toEndOf="@+id/editTextEstTime_repeated" />

    <EditText
        android:id="@+id/editTextEstTime_repeated"
        android:layout_width="187dp"
        android:layout_height="50dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/EstTimeHint"
        android:inputType="numberDecimal"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/estTimeStr"
        app:layout_constraintStart_toStartOf="@+id/editTextIncrementValue_repeated" />

    <TextView
        android:id="@+id/estTimeStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/estTimeStr"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/TextViewdifficulty_repeated"
        app:layout_constraintStart_toStartOf="@+id/IncrementStr"
        app:layout_constraintTop_toBottomOf="@+id/IncrementStr" />

    <EditText
        android:id="@+id/editTextIncrementValue_repeated"
        android:layout_width="132dp"
        android:layout_height="53dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/incrementValueStr"
        android:inputType="number|textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/IncrementStr"
        app:layout_constraintStart_toStartOf="@+id/editTextTaskName_repeated" />

    <TextView
        android:id="@+id/daysStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:text="@string/daysStr"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextIncrementValue_repeated"
        app:layout_constraintStart_toEndOf="@+id/editTextIncrementValue_repeated" />

    <TextView
        android:id="@+id/IncrementStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/repeatStr"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/estTimeStr"
        app:layout_constraintStart_toStartOf="@+id/addTaskNameStr"
        app:layout_constraintTop_toBottomOf="@+id/addTaskNameStr" />

    <EditText
        android:id="@+id/editTextTaskName_repeated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="73dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/taskNameHint"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/addTaskNameStr"
        app:layout_constraintStart_toEndOf="@+id/addTaskNameStr" />

    <TextView
        android:id="@+id/addTaskNameStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:text="@string/taskNameLabel"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/IncrementStr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/difficultyButton3_repeated"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:onClick="onCLickHard"
        android:text="@string/highDifficultyButton"
        app:layout_constraintBottom_toBottomOf="@+id/difficultyButton2_repeated"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/difficultyButton2_repeated"
        app:layout_constraintTop_toTopOf="@+id/difficultyButton2_repeated"
        app:layout_constraintVertical_bias="0.0"
        app:toggleCheckedStateOnClick="true" />

    <Button
        android:id="@+id/difficultyButton2_repeated"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:onClick="onClickMedium"
        android:text="@string/midDifficultyButton"
        app:layout_constraintBottom_toBottomOf="@+id/difficultyButton1_repeated"
        app:layout_constraintEnd_toStartOf="@+id/difficultyButton3_repeated"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/difficultyButton1_repeated"
        app:layout_constraintTop_toTopOf="@+id/difficultyButton1_repeated"
        app:layout_constraintVertical_bias="0.0"
        app:toggleCheckedStateOnClick="true" />

    <Button
        android:id="@+id/difficultyButton1_repeated"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="237dp"
        android:onClick="onClickEasy"
        android:text="@string/lowDifficultyButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/difficultyButton2_repeated"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewdifficulty_repeated"
        app:toggleCheckedStateOnClick="true" />

    <Button
        android:id="@+id/doneButton_repeated"
        android:layout_width="108dp"
        android:layout_height="74dp"
        android:onClick="todaysSessionsNav"
        android:text="@string/doneButton_repeated"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewdifficulty_repeated"
        app:layout_constraintVertical_bias="0.767" />

    <TextView
        android:id="@+id/difficultyStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/difficultyStr"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/TextViewdifficulty_repeated"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEstTime_repeated"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/TextViewdifficulty_repeated"
        android:layout_width="199dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:text="@string/textDifficulty"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/difficultyStr" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/navigation_bar"/>
</androidx.constraintlayout.widget.ConstraintLayout>